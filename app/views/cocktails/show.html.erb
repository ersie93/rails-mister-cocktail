<div class="d-flex container show-container justify-content-center">
	<div class="card">
		<div class="card-head text-center">
			<h1><%=@cocktail.name%></h1>
		</div>
		<div class="card-body">
			<ul>
				<% @cocktail.doses.each do |dose| %>
					<li><%= dose.description %> - <%=dose.ingredient.name%><%= link_to ' ✖️', dose_path(dose), method: :delete %></li>
				<% end %>
			</ul>
		</div>
		<div class="card-footer text-center">
		 	<h4><%= link_to "Back", cocktails_path %></h4>
		 	<h4><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></h4>
		</div>
	</div>
</div>