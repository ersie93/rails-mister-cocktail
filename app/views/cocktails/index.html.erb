<div class="header" style="background-image: linear-gradient(rgba(255,255,255,0.2),rgba(0,0,0,1)), url('https://res.cloudinary.com/ddkr8d6rd/image/upload/v1613858245/eujdpcdjrr8lif7t7j9h.jpg')">
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <%= link_to "Cocktails", cocktails_path, class: "navbar-brand"%>
      <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-success"%>
    </div>
  </nav>
  <div class="banner text-center">
    <h1>Cocktails</h1>
  </div>
</div>
<div class="container home-container">
  <div class="cocktails d-flex justify-content-around flex-wrap mt-4 mb-4">
    <% @cocktails.each do |cocktail|%>
      <div class="card">
        <div class="card-head text-center">
          <h1><%= link_to cocktail.name, cocktail_path(cocktail)%></h1>
        </div>
        <div class="card-body">
          <ul>
            <% cocktail.doses.each do |dose| %>
              <li><%= dose.description %> - <%=dose.ingredient.name%></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end -%>
  </div>
</div>


